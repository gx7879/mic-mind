extends ../layout/main

block variables
  - var title = 'Webpack + Pug';
  - var description = 'Description for Webpack + Pug';
  - var pageClass = 'bg-[#f4f4f4]';

block head
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.css")

block content
  div(class="bg-[#f4f4f4] text-[#eee] p-5")
    ul.flex.items-center.text-sm
      li.inline-flex.items-center
        a(class="text-gray-600 hover:text-blue-500" href='/')
          svg.w-5.h-auto.fill-current.mx-2.text-gray-400(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 24 24', fill='#000000')
            path(d='M0 0h24v24H0V0z', fill='none')
            path(d='M10 19v-5h4v5c0 .55.45 1 1 1h3c.55 0 1-.45 1-1v-7h1.7c.46 0 .68-.57.33-.87L12.67 3.6c-.38-.34-.96-.34-1.34 0l-8.36 7.53c-.34.3-.13.87.33.87H5v7c0 .55.45 1 1 1h3c.55 0 1-.45 1-1z')
        svg.w-5.h-auto.fill-current.mx-2.text-gray-400(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 24 24')
          path(d='M0 0h24v24H0V0z', fill='none')
          path(d='M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6-6-6z')
      li.inline-flex.items-center
        a(class="text-gray-600 hover:text-blue-500" href='#').
          My Account
    div(class="md:w-full pt-[30px] -mx-5")
      div(class="text-[#323232] px-5 md:px-[30px] max-w-[530px] mx-auto mb-[50px]")
        ul.grid.grid-cols-2.w-full.text-center.border(class="border-[#d3ced2] !border-b-0")
          li(class="border-r border-[#d3ced2] bg-[#fcfcfc]")
            a(class="tab-item block py-5" href="#tab1") 登入
          li(class="border-b border-[#d3ced2]")
            a(class="tab-item block py-5" href="#tab2") 註冊
        #tab-content.w-full.border.py-5(class="!border-t-0 border-[#d3ced2] bg-[#fcfcfc]")
          #tab1.tab-content
            div(class="mx-5")
              div.mb-6
                label(class="p-[3px] text-sm font-light leading-loose" for="mail") 電子郵件
                  span.text-red-500 *
                input#mail(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              div
                label(class="p-[3px] text-sm font-light leading-loose" for="password") 密碼
                  span.text-red-500 *
                input#password(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="password")
              button.text-sm.text-white(class="bg-[#f24d07] mt-2.5 py-2 px-3.5 w-full rounded-[3px]" type="button") 登入
              a.text-sm.font-light(class="leading-[1.6]" href="#") 忘記您的密碼？
          #tab2.tab-content.hidden
            div(class="mx-5")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="mail") 電子郵件
                  span.text-red-500 *
                input#mail(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="password") 密碼 (密碼長度至少 8 碼)
                  span.text-red-500 *
                input#password(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="password")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="name") 名字
                  span.text-red-500 *
                input#name(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="birthday") 生日
                input#birthday(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="birthday") 性別
                  span (選填)
                input#birthday(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              div(class="py-[3px]")
                label(class="p-[3px] text-sm font-light leading-loose" for="tel") 手機號碼
                  span.text-red-500 *
                input#tel(class="w-full p-2 bg-[#f6f6f6] rounded-sm border border-[#ddd]" type="text")
              button.text-sm.text-white(class="bg-[#f24d07] mt-2.5 py-2 px-3.5 w-full rounded-[3px]" type="button") 註冊
block script
  script(src="https://cdn.jsdelivr.net/npm/@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js")
  script.
    const tabs = document.querySelectorAll('.tab-item')
    const tabContents = document.querySelectorAll('.tab-content')

    tabs.forEach((tab)=>{
      tab.addEventListener('click', function(e) {
        for(let i = 0;i<tabs.length;i++){
          tabs[i].parentElement.classList.add('border-b')
          tabs[i].parentElement.classList.remove('bg-[#fcfcfc]')
          tabContents[i].classList.add('hidden')
        }
        e.preventDefault();
        this.parentElement.classList.remove('border-b')
        this.parentElement.classList.add('bg-[#fcfcfc]')
        const tabContent = document.querySelector(this.getAttribute('href'))
        tabContent.classList.remove('hidden')
      })
    })
